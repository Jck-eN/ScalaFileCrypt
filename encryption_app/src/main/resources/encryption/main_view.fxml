<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="encryptionApp.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Plik">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Pomoc">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox>
         <children>
            <Pane prefHeight="458.0" prefWidth="266.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="496.0" prefWidth="266.0">
                     <children>
                        <Label text="Niezawodne narzędzie do szyfrowania">
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#fileEncrypt" text="Szyfruj">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#fileDecrypt" text="Deszyfruj" />
                     </children>
                     <opaqueInsets>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </opaqueInsets>
                  </VBox>
               </children>
            </Pane>
            <VBox>
               <children>
                  <Label alignment="CENTER" minWidth="-Infinity" prefHeight="17.0" prefWidth="493.0" text="Lista plików" textAlignment="CENTER" />
                  <ListView fx:id="filesList" prefHeight="439.0" prefWidth="465.0" />
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                       <Button alignment="CENTER" mnemonicParsing="false" onAction="#selectFiles" text="Wybierz pliki" ButtonBar.buttonData="LEFT" />
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#cleanFiles" text="Wyczyść" ButtonBar.buttonData="RIGHT" />
                    </buttons>
                  </ButtonBar>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
